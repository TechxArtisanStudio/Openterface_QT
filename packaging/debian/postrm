#!/bin/bash
set -e

# Clean up bundled FFmpeg library configuration on removal
if [ "$1" = "remove" ] || [ "$1" = "purge" ]; then
    # Remove ldconfig configuration
    rm -f /etc/ld.so.conf.d/openterface-ffmpeg.conf
    
    # Update library cache
    if command -v ldconfig >/dev/null 2>&1; then
        ldconfig
    fi
    
    echo "OpenterfaceQT: FFmpeg 6.1.1 library configuration removed"
fi

exit 0
