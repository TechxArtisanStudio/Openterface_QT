Name:           openterfaceqt
Version:        ${VERSION}
Release:        1
Summary:        OpenterfaceQT Mini-KVM Application

License:        Proprietary
URL:           https://github.com/kevinzjpeng/Openterface_QT

%description
OpenterfaceQT Application

%install
mkdir -p %{buildroot}/usr/bin
mkdir -p %{buildroot}/usr/share/icons/hicolor/256x256/apps
mkdir -p %{buildroot}/usr/share/applications

cp -r /home/runner/work/_temp/build_online/openterfaceQT %{buildroot}/usr/bin/
cp /home/runner/work/Openterface_QT/Openterface_QT/images/icon_256.png %{buildroot}/usr/share/icons/hicolor/256x256/apps/openterfaceQT.png

cat > %{buildroot}/usr/share/applications/openterfaceQT.desktop << EOF
[Desktop Entry]
Version=${VERSION}
Type=Application
Name=OpenterfaceQT
Exec=/usr/bin/openterfaceQT
Icon=openterfaceQT
Comment=OpenterfaceQT Application
Categories=Utility;
EOF


%files
/usr/bin/openterfaceQT
/usr/share/icons/hicolor/256x256/apps/openterfaceQT.png
/usr/share/applications/openterfaceQT.desktop